generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  role      Role     @default(JOBSEEKER)
  createdAt DateTime @default(now())

  jobSeeker JobSeeker?
  employer  Employer?

}

model JobSeeker {
  id            String   @id
  user          User     @relation(fields: [id], references: [id])
  resumeUrl     String?
  skills        String?
  bio           String?
  applications  Application[]
}

model Employer {
  id              String   @id
  user            User     @relation(fields: [id], references: [id])
  companyName     String
  companyWebsite  String?
  companyAddress  String?
  companyBio      String?
  jobs            Job[]
}

model Job {
  id          String   @id @default(cuid())
  title       String
  salary      String?
  industryId  String?
  industry    Industry? @relation(fields: [industryId], references: [id])
  location    String
  description String  
  employerId  String
  employer    Employer     @relation(fields: [employerId], references: [id])
  createdAt   DateTime @default(now())
  applications Application[]
}

model Application {
  id          String   @id @default(cuid())
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobSeekerId String
  jobSeeker   JobSeeker @relation(fields: [jobSeekerId], references:[id])
  coverLetter String
  createdAt   DateTime @default(now())
}
model Industry {
  id          String    @id @default(cuid())
  name        String    @unique
  jobs        Job[]
}

enum Role {
  EMPLOYER
  JOBSEEKER
}
