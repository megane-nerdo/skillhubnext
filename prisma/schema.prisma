generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  role      Role     @default(JOBSEEKER)
  createdAt DateTime @default(now())

  jobSeeker JobSeeker?
  employer  Employer?

}

model JobSeeker {
  id            String   @id
  user          User     @relation(fields: [id], references: [id], onDelete: Cascade)
  resumeUrl     String?
  skills        String?
  bio           String?
  profilePicUrl String?
  applications  Application[]
}

model Employer {
  id              String   @id
  user            User     @relation(fields: [id], references: [id], onDelete: Cascade)
  companyName     String
  companyWebsite  String?
  companyAddress  String?
  companyBio      String?
  size            String?
  phoneNumber     String?
  verifiedStatus  Boolean
  profilePicUrl   String?
  jobs            Job[]
  subscriptions   Subscription[]
}

model Job {
  id          String   @id @default(cuid())
  title       String
  salary      String?
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  location    String?
  description String?
  employerId  String
  employer    Employer     @relation(fields: [employerId], references: [id])
  createdAt   DateTime @default(now())
  applications Application[]

  benefits      String[]
  highlights     String[]
  careerOpportunities String[]
  requirements  String?
}

model Application {
  id          String   @id @default(cuid())
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobSeekerId String
  jobSeeker   JobSeeker @relation(fields: [jobSeekerId], references:[id])
  coverLetter String
  createdAt   DateTime @default(now())
  status      String?
}
model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  jobs        Job[]
}
model SubscriptionPlan {
  id          String    @id @default(cuid())
  name        String
  price       Float
  duration    Int
  limitPerMonth Int
  features    String[]
  subscriptions Subscription[]
}
model Subscription {
  id          String    @id @default(cuid())
  employerId  String
  employer    Employer  @relation(fields: [employerId], references: [id])
  planId      String
  plan        SubscriptionPlan  @relation(fields: [planId], references: [id])
  startDate   DateTime @default(now())
  endDate     DateTime
  status      String
}
enum Role {
  EMPLOYER
  JOBSEEKER
}
